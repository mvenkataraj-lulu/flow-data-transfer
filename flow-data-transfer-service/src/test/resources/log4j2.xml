<?xml version="1.0" encoding="UTF-8"?>

<Configuration monitorInterval="10">

    <Appenders>

        <Console name="STDOUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSSZ} level=%p %X{cid} %X{jobExecutionId} %c - %m%n" />
        </Console>

    </Appenders>

    <Loggers>

        <AsyncRoot level="INFO">
            <AppenderRef ref="STDOUT"/>
        </AsyncRoot>
    </Loggers>

</Configuration>
